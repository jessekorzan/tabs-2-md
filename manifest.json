{
  "manifest_version": 3,
  "name": "Tabs to Markdown",
  "version": "1.0",
  "description": "A single-click Chrome extension to save all open tabs to a Markdown file.",
  "permissions": [
    "tabs",
    "notifications",
    "downloads",
    "storage",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "host_permissions": [
    "https://api.openai.com/"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Save Tabs to Markdown"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
